platform :ios, '13.0'
use_frameworks!

target 'ArboreUi' do
  pod 'Firebase/Analytics'
  pod 'Firebase/Auth'
  pod 'GoogleSignIn', '~> 7.0'
  pod 'GoogleSignInSwift'
  pod 'GTMSessionFetcher/Core', '~> 1.1'
  pod 'FBSDKLoginKit'
  pod 'Firebase/Firestore'

  target 'ArboreUiTests' do
    inherit! :search_paths
  end

  target 'ArboreUiUITests' do
  end
end

# Enhanced post_install block to handle deployment target and simulator architecture
post_install do |installer|
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
        
        # Exclude arm64 architecture for simulator builds
        config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
      end
    end
  end

  # Configure each pod target
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      
      # Exclude arm64 for simulator
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
      
      # Additional Firebase-specific configurations
      if target.name.start_with?('Firebase') || target.name.start_with?('Google')
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      end
    end
    
    # Remove compiler flag for BoringSSL-GRPC
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end
  end
end
